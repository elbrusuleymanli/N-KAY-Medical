@model List<Vacancy>
@{
    ViewData["Title"] = "Index";
}

<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12 ">
    <div class="mdc-card p-0 ">
        <div class="topic">

            <h6 class="card-title card-padding pb-0" style="color:white;font-size:40px;text-align:center; font-weight:600;">VAKANSİYALAR</h6>
            <a class="btn btn-success m-2" style="width:140px;" asp-controller="Vacancy" asp-action="Create">Yeni vakansiya</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="border-color: black; text-align: center">
                <thead>
                    <tr style="background-color: #f7f7f7;text-align:center">
                        <th>VƏZİFƏ</th>
                        <th>CİNS</th>
                        <th>TƏHSİL</th>
                        <th>TƏCRÜBƏ</th>
                        <th>İŞ VAXTI</th>
                        <th>İŞ GÜNLƏRİ</th>
                       
                        <th>HƏRƏKƏTLƏR</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var vacancy in Model)
                    {
                    <tr>


                        <td>@vacancy.Position</td>
                        <td>@vacancy.Gender</td>
                        <td>@vacancy.Education</td>
                        <td>@vacancy.Experience</td>
                        <td>@vacancy.WorkTime</td>
                        <td>@vacancy.WorkDays</td>



                        <td>
                            <a class="btn btn-warning mt-2" style="width:90px" asp-controller="Vacancy" asp-action="Update" asp-route-id="@vacancy.Id">Redaktə</a>

                            <a class="btn btn-primary mt-2" style="width:90px" asp-controller="Vacancy" asp-action="Detail" asp-route-id="@vacancy.Id">Məlumat</a>

                            <a class="btn btn-danger mt-2" style="width:90px" asp-controller="Vacancy" asp-action="Delete" asp-route-id="@vacancy.Id">Ləğv et</a>
                        </td>

                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>



