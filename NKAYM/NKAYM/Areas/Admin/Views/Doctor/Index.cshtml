@model List<Doctor>
@{
    ViewData["Title"] = "Index";
}

<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12 ">
    <div class="mdc-card p-0 ">
        <div class="topic">

            <h6 class="card-title card-padding pb-0" style="color:white;font-size:40px;text-align:center; font-weight:600;">HƏKİMLƏR</h6>
            <a class="btn btn-success m-2" style="width:120px;" asp-controller="Doctor" asp-action="Create">Yeni həkim</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="border-color: black; text-align: center">
                <thead>
                    <tr style="background-color: #f7f7f7;text-align:center">
                        <th>ŞƏKİL</th>
                        <th>AD SOYAD</th>
                        <th>VƏZİFƏ</th>
                        <th>İŞ GÜNLƏRİ</th>
                        <th>ƏLAQƏ TELEFONU</th>
                        <th>TƏHSİL</th>
                        <th>TƏCRÜBƏ</th>
                        <th>HƏRƏKƏTLƏR</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                    <tr>

                        <td> <img src="~/assets/images/doctors/@doctor.Image" alt="şəkil" style="border-radius:10px"></td>
                        <td >@doctor.Fullname</td>
                        <td class="text-left">@doctor.Position</td>
                        <td class="text-left">@doctor.WorkDay</td>
                        <td class="text-left">@doctor.Phone</td>
                        <td class="text-left">
                           
                            <ul>
                                @foreach (var item in doctor.Educations)
                                {
                                   
                                            <li>
                                                @item.TypeOfUniver <br />
                                                @item.NameOfUniver<br />
                                                @item.Specialty<br />
                                                @item.StartUniver.ToString("yyyy -")
                                                @item.EndUniver.ToString("yyyy")<br />
                                                @item.Country<br />
                                            </li>
                                      
                                }





                            </ul>
                           


                            </td>
                        <td class="text-left">
                            <ul>
                                @foreach (var item in doctor.Experiences)
                                {
                                <li>
                                   
                                            @item.Company <br />
                                            @item.Section <br />
                                            @item.StartWork.ToString("yyyy -")
                                            @item.EndWork.ToString("yyyy") <br />
                                            @item.Country
                                        </li>
                                  
                                    }
                                </ul>
                          
                               


                         

                        </td>
                        <td>
                            <a class="btn btn-warning mt-2" style="width:90px" asp-controller="Doctor" asp-action="Update" asp-route-id="@doctor.Id">Redaktə</a>

                            <a class="btn btn-primary mt-2" style="width:90px" asp-controller="Doctor" asp-action="Detail" asp-route-id="@doctor.Id">Məlumat</a>

                            <a class="btn btn-danger mt-2" style="width:90px" asp-controller="Doctor" asp-action="Delete" asp-route-id="@doctor.Id">Ləğv et</a>
                        </td>

                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

