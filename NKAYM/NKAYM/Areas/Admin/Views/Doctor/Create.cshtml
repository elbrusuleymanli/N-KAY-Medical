@model Doctor
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <form class="forms-sample" method="post" asp-controller="Doctor" asp-action="Create" enctype="multipart/form-data">

                            <div class="form-group">
                                <label for="exampleInputUsername1">Şəkil*</label>
                                <input accept="image/*" asp-for="DoctorImageFile" class="form-control" placeholder="ImageFile">
                                <span asp-validation-for="DoctorImageFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Ad Soyad*</label>
                                <input asp-for="Fullname" class="form-control " placeholder="Ad Soyad">
                                <span asp-validation-for="Fullname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Vəzifə*</label>
                                <input asp-for="Position" class="form-control" placeholder="Vəzifə">
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">İş günləri*</label>
                                <input asp-for="WorkDay" class="form-control" placeholder="İş günləri"></input>
                                <span asp-validation-for="WorkDay" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Əlaqə telefonu*</label>
                                <input asp-for="Phone" class="form-control" placeholder="Əlaqə telefonu"></input>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Təhsil*</label>
                                <textarea asp-for="Educations" class="form-control" placeholder="Təhsil"></textarea>
                                <span asp-validation-for="Educations" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Təcrübə*</label>
                                <textarea asp-for="Experiences" class="form-control" placeholder="Təcrübə"></textarea>
                                <span asp-validation-for="Experiences" class="text-danger"></span>
                            </div>


                            <button type="submit" class="btn btn-success me-2">Təsdiqlə</button>
                            <button class="btn btn-danger" asp-action="Index">Bağla</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



