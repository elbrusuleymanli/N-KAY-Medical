@model List<Partner>
@{
    ViewData["Title"] = "Index";
}


<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12 ">
    <div class="mdc-card p-0 ">
        <div class="topic">

            <h6 class="card-title card-padding pb-0" style="color:white;font-size:40px;text-align:center; font-weight:600;">TƏRƏFDAŞLAR</h6>
            <a class="btn btn-success m-2" style="width:120px;" asp-controller="Partner" asp-action="Create">Yeni tərəfdaş</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="border-color: black; text-align: center">
                <thead>
                    <tr style="background-color: #f7f7f7;text-align:center">

                        <th>ŞƏKİL</th>
                        <th>VEB ÜNVAN</th>
                        <th>SIRA</th>

                        <th>HƏRƏKƏTLƏR</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var partner in Model)
                    {
                    <tr>

                        <td> <img src="~/assets/images/partners/@partner.Image" alt="şəkil" style="width:200px;height:70px;border-radius:10px"></td>
                        <td> @partner.WebAdress </td>
                        <td> @partner.Order</td>
                        <td>
                            <a class="btn btn-warning mt-2" style="width:90px" asp-controller="Partner" asp-action="Update" asp-route-id="@partner.Id">Redaktə</a>

                            <a class="btn btn-primary mt-2" style="width:90px" asp-controller="Partner" asp-action="Detail" asp-route-id="@partner.Id">Məlumat</a>

                            <a class="btn btn-danger mt-2" style="width:90px" asp-controller="Partner" asp-action="Delete" asp-route-id="@partner.Id">Ləğv et</a>
                        </td>

                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

