@model NewsWall
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <form class="forms-sample" method="post" asp-controller="News" asp-action="Create" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Tarix*</label>
                                <input asp-for="ReleaseDate" class="form-control " placeholder="Tarix">
                                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Şəkil*</label>
                                <input accept="image/*" asp-for="ImageFile" class="form-control" placeholder="ImageFile">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Başlığ*</label>
                                <input asp-for="Title" class="form-control" placeholder="Başlığ">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">MƏTN(1-ci hissə)*</label>
                                <textarea asp-for="Descr1" class="form-control" placeholder="MƏTN(1-ci hissə)"></textarea>
                                <span asp-validation-for="Descr1" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">MƏTN(2-ci hissə)</label>
                                <textarea asp-for="Descr2" class="form-control" placeholder="MƏTN(2-ci hissə)"></textarea>
                                <span asp-validation-for="Descr2" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">MƏTN(3-cü hissə)</label>
                                <textarea asp-for="Descr3" class="form-control" placeholder="MƏTN(3-cü hissə)"></textarea>
                                <span asp-validation-for="Descr3" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-success me-2">Təsdiqlə</button>
                            <button class="btn btn-danger" asp-action="Index">Bağla</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="https://cdn.ckeditor.com/ckeditor5/34.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Descr1'))
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#Descr2'))
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#Descr3'))
            .catch(error => {
                console.error(error);
            });
    </script>


}