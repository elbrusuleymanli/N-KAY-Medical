@model VideoGallery
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <form class="forms-sample" method="post" asp-controller="Video" asp-action="Create" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Başlığ*</label>
                                <input asp-for="Title" class="form-control" placeholder="Başlığ">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Video*</label>
                                <input accept="video/*" asp-for="VideoFile" class="form-control" placeholder="VideoFile">
                                <span asp-validation-for="VideoFile" class="text-danger"></span>
                            </div>


                            <button type="submit" class="btn btn-success me-2">Təsdiqlə</button>
                            <button class="btn btn-danger" asp-action="Index">Bağla</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



