@model List<VideoGallery>
@{
    ViewData["Title"] = "Index";
}

<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12 ">
    <div class="mdc-card p-0 ">
        <div class="topic">

            <h6 class="card-title card-padding pb-0" style="color:white;font-size:40px;text-align:center; font-weight:600;">VİDEOLAR</h6>
            <a class="btn btn-success m-2" style="width:120px;" asp-controller="Video" asp-action="Create">Yeni video</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="border-color: black; text-align: center">
                <thead>
                    <tr style="background-color: #f7f7f7;text-align:center">

                        <th>BAŞLIĞ</th>
                        <th>VİDEO</th>
                       

                        <th>HƏRƏKƏTLƏR</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var video in Model)
                    {
                        <tr>
                            <td> @video.Title </td>
                            <td>
                                <video controls>
                                    <source src="~/assets/images/gallery-video/@video.Video"alt="video" style="width:200px;height:170px;border-radius:10px" type="video/mp4">
                                </video>

                               
                            </td>
                            
                           
                            <td>
                               
                                <a class="btn btn-danger mt-2" style="width:90px" asp-controller="Video" asp-action="Delete" asp-route-id="@video.Id">Ləğv et</a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

