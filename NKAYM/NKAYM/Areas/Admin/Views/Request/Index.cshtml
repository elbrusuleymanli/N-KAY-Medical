@model List<DocRequest>
@{
    ViewData["Title"] = "Index";
}

<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12 ">
    <div class="mdc-card p-0 ">
        <div class="topic">

            <h6 class="card-title card-padding pb-0" style="color:white;font-size:40px;text-align:center; font-weight:600;">HƏKİM QƏBULU ÜÇÜN MÜRACİƏTLƏR</h6>

        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="border-color: black; text-align: center">
                <thead>
                    <tr style="background-color: #f7f7f7;text-align:center">

                        <th>Ad Soyad,Ata adı</th>
                       
                        <th>Doğum günü</th>
                        <th>Ünvan</th>
                        <th>Əlaqə nömrəsi</th>
                        <th>Şikayət</th>
                        <th>Bölmə</th>
                        <th>Həkim</th>
                        <th>Müayinə günü</th>
                        <th>Müayinə saatı</th>

                        <th>HƏRƏKƏTLƏR</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                    <tr>

                        <td> @request.Fullname</td>
                       
                        <td> @request.Birhtday.ToString("dd.MM.yyyy")</td>
                        <td> @request.Address</td>
                        <td> @request.Phone</td>
                        <td> @request.Unit</td>
                        <td> @request.DoctorsFullname</td>
                        <td> @request.RequestDay.ToString("dd.MM.yyyy")</td>
                        <td> @request.RequestTime.ToString("HH:mm")</td>

                        <td>

                            <a class="btn btn-danger" onclick="return confirm('Əminsiniz?')" ; style="width:90px" asp-controller="Request" asp-action="Delete" asp-route-id="@request.Id">Ləğv et</a>
                        </td>

                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>


