@model List<PhotoGallery>
@{
    ViewData["Title"] = "Index";
}

<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12 ">
    <div class="mdc-card p-0 ">
        <div class="topic">

            <h6 class="card-title card-padding pb-0" style="color:white;font-size:40px;text-align:center; font-weight:600;">ŞƏKİLLƏR</h6>
            <a class="btn btn-success m-2" style="width:120px;" asp-controller="Photo" asp-action="Create">Yeni şəkil</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="border-color: black; text-align: center">
                <thead>
                    <tr style="background-color: #f7f7f7;text-align:center">

                        <th>ŞƏKİL</th>
                       

                        <th>HƏRƏKƏTLƏR</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var photo in Model)
                    {
                        <tr>

                            <td> <img src="~/assets/images/@photo.Image" alt="şəkil" style="width:200px;height:170px;border-radius:10px"></td>
                           
                            <td>
                                <a class="btn btn-warning mt-2" style="width:90px" asp-controller="Photo" asp-action="Update" asp-route-id="@photo.Id">Redaktə</a>

                                <a class="btn btn-primary mt-2" style="width:90px" asp-controller="Photo" asp-action="Detail" asp-route-id="@photo.Id">Məlumat</a>

                                <a class="btn btn-danger mt-2" style="width:90px" asp-controller="Photo" asp-action="Delete" asp-route-id="@photo.Id">Ləğv et</a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
