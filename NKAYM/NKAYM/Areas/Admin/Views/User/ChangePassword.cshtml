
@model ChangePasswordVM

@{
    ViewData["Title"] = "ChangePassword";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 style="color:green;font-weight:600;"> @ViewBag.UserName <span style="color:blue">adlı istifadəçi üçün şifrəni dəyiş</span></h4>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form class="forms-sample" method="post" asp-controller="User" asp-action="ChangePassword">
                            <div class="form-group">
                               
                                <input asp-for="NewPassword" class="form-control" placeholder="Yeni şifrə">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                               
                                <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Yeni şifrənin təkrarı">
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                            </div>


                            <button type="submit" class="btn btn-success me-2">Təsdiqlə</button>
                            <button class="btn btn-danger" asp-action="Index">Bağla</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>