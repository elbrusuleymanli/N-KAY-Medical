@model List<UserVM> 
@{
    ViewData["Title"] = "Index";
}

<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12 ">
    <div class="mdc-card p-0 ">
        <div class="topic">

            <h6 class="card-title card-padding pb-0" style="color:white;font-size:40px;text-align:center; font-weight:600;">İSTİFADƏÇİLƏR</h6>
           
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="border-color: black; text-align: center">
                <thead>
                    <tr style="background-color: #f7f7f7;text-align:center">
                        <th>Ad Soyad</th>
                        <th>İstifadəçi adı</th>
                        <th>E-Poçt ünvanı</th>
                        <th>Vəzifəsi</th>
                       
                        <th>HƏRƏKƏTLƏR</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                    <tr>
                        <td >@user.Fullname</td>
                        <td >@user.Username</td>
                        <td >@user.Email</td>
                        <td >@user.Roles</td>
                     



                        <td>
                            <a class="btn btn-success" style="width:110px" asp-controller="User" asp-action="GetRoles" asp-route-id="@user.Id">Vəzifə seç</a>

                            <a class="btn btn-primary" style="width:115px" asp-controller="User" asp-action="ChangePassword" asp-route-id="@user.Id">Şifrəni dəyiş</a>

                            <a class="btn btn-danger" style="width:90px" asp-controller="User" asp-action="Block" asp-route-id="@user.Id">

                                @if (user.IsActive)
                                {
                                    <p>Blokla</p>
                                }

                                else
                                {
                                    <p style="width:70px">Blokdan aç</p>
                                }
                            </a>
                            
                            
                            
                            
                            
                            
                            
                
                       
                        
                        
                        
                        
                        
                        </td>

                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>


