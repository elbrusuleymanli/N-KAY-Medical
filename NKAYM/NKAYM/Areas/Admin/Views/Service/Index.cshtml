@model List<Service>
@{
    ViewData["Title"] = "Index";
}

<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12 ">
    <div class="mdc-card p-0 ">
        <div class="topic">

            <h6 class="card-title card-padding pb-0" style="color:white;font-size:40px;text-align:center; font-weight:600;">XİDMƏTLƏR</h6>
            <a class="btn btn-success m-2" style="width:120px;" asp-controller="Service" asp-action="Create">Yeni xidmət</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="border-color: black; text-align: center">
                <thead>
                    <tr style="background-color: #f7f7f7;text-align:center">
                        <th>XİDMƏTİN ADI</th>
                        <th>İŞARƏ</th>
                        <th>ŞƏKİL</th>
                        <th>MƏTN</th>
                        <th>XİDMƏTLƏR</th>
                        <th>HƏRƏKƏTLƏR</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                    <tr>
                        <td style="font-weight:600">@service.Title</td>
                        <td style="font-size:20px">@Html.Raw(service.Icon)</td>
                        <td> <img src="~/assets/images/services-detail/@service.Image" alt="şəkil" style="border-radius:10px"></td>
                        <td class="text-left">@service.Text</td>
                        <td class="text-left">
                            <ul>
                                @foreach (var item in service.ServiceOptions)
                                {
                                    <li>
                                        @item.Name
                                    </li>
                                }

                            </ul>

                        </td>

                        <td>
                            <a class="btn btn-warning mt-2" style="width:90px" asp-controller="Service" asp-action="Update" asp-route-id="@service.Id">Redaktə</a>

                            <a class="btn btn-primary mt-2" style="width:90px" asp-controller="Service" asp-action="Detail" asp-route-id="@service.Id">Məlumat</a>

                            <a class="btn btn-danger mt-2" style="width:90px" asp-controller="Service" asp-action="Delete" asp-route-id="@service.Id">Ləğv et</a>
                        </td>

                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

