@model List<Vacancy>
@{
    ViewData["Title"] = "Index";
}

<!-- banner start -->
<div class="container-fluid p-0">
    <div class="banner">
        <div class="banner-image">
            <img src="/assets/images/banners/vacancy.jpg" alt="">
            <div class="container">
                <h3>VAKANSİYALAR</h3>
            </div>

        </div>
    </div>
</div>
<!-- banner end -->
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-6">
            <div class="vacancy">
                <table>
                    <tr>
                        <th>
                            VƏZİFƏ
                        </th>
                        <th>
                            CİNS
                        </th>
                        <th>
                            TƏHSİL
                        </th>
                        <th>
                            TƏCRÜBƏ
                        </th>
                        <th>
                            SAAT
                        </th>
                        <th>
                             GÜN
                        </th>
                    </tr>
                    @foreach (var vacancy in Model)
                    {
                        <tr>
                            <td>
                                @vacancy.Position
                            </td>
                            <td>
                               @vacancy.Gender
                            </td>
                            <td>
                               @vacancy.Education
                            </td>
                            <td>
                                @vacancy.Experience
                            </td>
                            <td>
                                @vacancy.WorkTime
                            </td>
                            <td>
                                @vacancy.WorkDays
                            </td>
                           
                                
                           
                        </tr>
                    }


                </table>
            </div>
            <div class="vac-req">
                <a class="request" asp-controller="VacancyRequest" asp-action="Create" >MÜRACİƏT ET</a>
            </div>
        </div>
    </div>
</div>

