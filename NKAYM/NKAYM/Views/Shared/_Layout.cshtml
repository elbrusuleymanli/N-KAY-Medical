<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - NKAYM</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.0/dist/aos.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
          integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.css">
    <link rel="stylesheet" href="https://rawgit.com/LeshikJanz/libraries/master/Bootstrap/baguetteBox.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">


    <link rel="stylesheet" href="~/assets/css/style.css">
    <title>NKayM</title>
    @inject LanguageService language
</head>

<body>
    <header>
        @await Component.InvokeAsync("NavMenu")



        <!-- mobile menu start-->
        <div id="nav-toggle">
            <div>
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <div id="gloval-nav">
            <nav>
                <ul id="navigation">
                    <li><a asp-controller="Home" asp-action="Index">@language.Getkey("ANA SƏHİFƏ")</a></li>
                    <li><a asp-controller="About" asp-action="Index">@language.Getkey("HAQQIMIZDA")</a> </li>
                    <li><a asp-controller="Service" asp-action="Index">@language.Getkey("XİDMƏTLƏR")</a></li>
                    <li><a asp-controller="Doctor" asp-action="Index">@language.Getkey("HƏKİMLƏR")</a></li>
                    <li><a asp-controller="News" asp-action="Index">@language.Getkey("XƏBƏRLƏR")</a></li>
                    <li><a asp-controller="PhotoGallery" asp-action="Index">@language.Getkey("QALEREYA")</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">@language.Getkey("ƏLAQƏ")</a></li>
                    <li>
                        <div class="profile" style="text-align:center;">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Account" asp-action="Login" id="myBtn" type="submit">

                                    <i class="fas fa-user-md"></i>
                                </a>
                                <span class="sign-in">@language.Getkey("Daxil ol")</span>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Logout" id="myBtn" type="submit" style="color:green" onclick="return confirm('Çıxış etməyə əminsiniz?')  ;">

                                    <i class="fas fa-user-md"></i>
                                </a>
                                <span class="sign-in">@language.Getkey("Çıxış et")</span>
                            }
                        </div>
                    </li>
                </ul>
                <ul style="display:flex;justify-content:center">
                    <li>
                        <a style="background-image: linear-gradient(to top, #07a300, #689500, #948400, #b46e00, #ca5500, #d5421f, #de2b34, #e2004a, #db0065, #c40088, #9600ae, #0f06d3);"
                           asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="az-Latn">
                            AZ
                        </a>
                    </li>

                    <li style="margin-left:15px;margin-right:15px">
                        <a style="background-image: linear-gradient(to bottom, #0009c9, #5440d6, #7e6ae0, #a393e9, #c6bdf0, #d5c2f2, #e2c7f3, #efccf4, #fda5dc, #ff78b0, #ff4471, #ff0022); " asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="ru-RU">
                            RU
                        </a>
                    </li>
                    <li>
                        <a style="background-image: linear-gradient(to right bottom, #0009c9, #8c00b1, #bf0096, #df007c, #f10066, #f6015c, #fa0951, #fd1646, #fc1846, #fa1a45, #f91c45, #f81e45);" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US">
                            EN
                        </a>
                    </li>
                </ul>
            </nav>

            <div id="nav-bg-wrap">
                <div class="nav-bg home"></div>
                <div class="nav-bg about"></div>
                <div class="nav-bg service"></div>
                <div class="nav-bg doctors"></div>
                <div class="nav-bg news"></div>
                <div class="nav-bg gallery"></div>
                <div class="nav-bg contact"></div>
            </div>
        </div>




        <!-- mobile menu end-->
    </header>

    @RenderBody()

    <!-- back to top start-->
    @await Component.InvokeAsync("Footer")
    <div class="btn-back-to-top">
        <i class="far fa-chevron-up first"></i>

    </div>
    <!-- Messenger Chat Plugin Code -->
    <div id="fb-root"></div>

    <!-- Your Chat Plugin code -->
    <div id="fb-customer-chat" class="fb-customerchat">
    </div>

    <script>
        var chatbox = document.getElementById('fb-customer-chat');
        chatbox.setAttribute("page_id", "105581098384672");
        chatbox.setAttribute("attribution", "biz_inbox");
    </script>

    <!-- Your SDK code -->
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                xfbml: true,
                version: 'v14.0'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/en_US/sdk/xfbml.customerchat.js';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <!-- back to top end-->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.0/dist/aos.js"></script>
    <script src="https://npmcdn.com/isotope-layout@3/dist/isotope.pkgd.js"></script>

    <script>
        baguetteBox.run('.tz-gallery');
    </script>
    <script>
        AOS.init();
    </script>
    <script src="~/assets/JS/main.js"></script>
    <script src="~/assets/JS/mobile-menu.js"></script>

</body>

</html>