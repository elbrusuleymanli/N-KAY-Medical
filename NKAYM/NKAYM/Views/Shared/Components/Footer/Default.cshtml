@model Footer
@inject LanguageService language

<footer>
    <!-- footer start-->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">

                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/assets/images/logo (1).png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="about-us">
                        <h4>@language.Getkey("HAQQIMIZDA")</h4>
                        <p>
                           
                            @language.Getkey("Klinikanın təməli təsisçiləri həkim-stomatoloqlar Natiq Mütəllimov və Kəbutər Mütəllimova tərəfindən 1996 - cı ildə qoyulmuşdur və 2005 - ci il iyulun 26 - da istifadəyə verilmişdir.")

                           
                        </p>
                        <a asp-controller="About" asp-action="Index">
                            @language.Getkey("ərtaflı") 
                            <i class="fas fa-angle-double-right"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3">
                    <h4>@language.Getkey("KATEQORİYA")</h4>
                    <ul>
                        <li><a asp-controller="Service" asp-action="Index">@language.Getkey("XİDMƏTLƏR")</a></li>
                        <li><a asp-controller="Doctor" asp-action="Index">@language.Getkey("HƏKİMLƏR")</a></li>
                        <li><a asp-controller="News" asp-action="Index">@language.Getkey("XƏBƏRLƏR")</a></li>
                        <li><a asp-controller="PhotoGallery" asp-action="Index">@language.Getkey("QALEREYA")</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a asp-controller="Vacancy" asp-action="Index">@language.Getkey("VAKANSİYA")</a></li>
                        }
                        else
                        {
                            <li ><a asp-controller="Account" asp-action="Register" onclick="return alert('Müracət üçün qeydiyyatdan keçin')  ;" >@language.Getkey("VAKANSİYA") </a></li>
                        }
                    </ul>
                </div>
                <div class="col-lg-3">
                    <div class="contacts">
                        <h4>@language.Getkey("ƏLAQƏ")</h4>
                        <ul class="contact">
                            <li class="adress"> <span>@language.Getkey("Ünvan:")</span> @language.Getkey(Model.Adress)</li>
                            <li class="phone"><span>@language.Getkey("Telefon:")</span>  @Model.Phone</li>
                            <li class="email">
                                <span>@language.Getkey("E-poçt:")</span><a href="mailto:@Model.Email"> @Model.Email</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- footer end-->
    <!-- line start-->
    <div class="end-line">
        <span>@language.Getkey("N-KAY MEDICAL © 2022 Bütün hüquqlar qorunur.") </span>
        <span>Designed by ENAPA</span>
    </div>
    <!-- line end-->
</footer>