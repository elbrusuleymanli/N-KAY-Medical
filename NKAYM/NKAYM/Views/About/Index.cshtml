@model About
@inject LanguageService language
@{
    ViewData["Title"] = "Index";
}

<!-- banner start -->
<div class="container-fluid p-0">
    <div class="banner">
        <div class="banner-image">
            <img src="/assets/images/banners/about.jpg" alt="">
            <div class="container">
                <h3>@language.Getkey("HAQQIMIZDA")</h3>
            </div>

        </div>
    </div>
</div>
<!-- banner end -->
<!-- about start -->
<div class="about-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 " data-aos="zoom-in">
                <img src="/assets/images/banners/@Model.Image" alt="">
            </div>
            <div class="col-lg-8" data-aos="zoom-in">
                <div class="text">
                    <p>
                        @language.Getkey(Model.Text)
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- about end -->
