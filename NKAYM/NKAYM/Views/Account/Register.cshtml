@model RegisterVM
@inject LanguageService language

@{
    ViewData["Title"] = "Register";
}
<div class="content d-flex justify-content-center">
    <div class="login-wrap">
        <h2>@language.Getkey("Qeydiyyat")</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="Register">
            <div class="form">
                <input class="inp" asp-for="Fullname" type="text" placeholder="Fullname"  />
                <span asp-validation-for="Fullname"></span>
                <input asp-for="Username" type="text" placeholder="Username"  />
                <span asp-validation-for="Username"></span>
                <input asp-for="Email" type="text" placeholder="Email"  />
                <span asp-validation-for="Email"></span>
                <input asp-for="Password" type="password" placeholder="Password"  />
                <span asp-validation-for="Password"></span>
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password"  />
                <span asp-validation-for="ConfirmPassword"></span>


                <button type="submit">@language.Getkey("TƏSDİQLƏ")</button>
                
            </div>
        </form>
    </div>
</div>



