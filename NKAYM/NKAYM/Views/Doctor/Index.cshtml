@model DoctorVM

@inject LanguageService language
@{
    ViewData["Title"] = "Index";
}

<!-- banner start -->
<div class="container-fluid p-0">
    <div class="banner">
        <div class="banner-image">
            <img src="/assets/images/banners/doctor.jpg" alt="">
            <div class="container">
                <h3>@language.Getkey("HƏKİMLƏR")</h3>
            </div>

        </div>
    </div>
</div>
<!-- banner end -->
<!-- doctors list start -->
<div class="container">
    <div class="portfolio-menu">
        <ul>
            <li class="active" data-filter="*">@language.Getkey("HAMISI")</li>

            @foreach (var position in Model.Positions)
            {
                <li data-filter=".@position.Name.ToLower()"> @position.Name.ToUpper()</li>
            }


        </ul>
    </div>
</div>
<div class="container">
    <div class="doctor-item">
        <div class="row">
            @foreach (var doctor in Model.Doctors)
            {
                <div class=" col-lg-3 col-md-6 col-sm-12 item @language.Getkey(doctor.DoctorPositions.FirstOrDefault()?.Position.Name.ToLower())">
                    <div class="person ">

                        <div class="main-image">
                            <a asp-controller="Doctor" asp-action="Details" asp-route-id="@doctor.Id">
                                <img src="/assets/images/doctors/@doctor.Image" alt="">
                                <span>
                                    <div class="name">
                                        <h5>@language.Getkey(doctor.Fullname)</h5>

                                        <h6>@language.Getkey(doctor.Position)</h6>
                                    </div>

                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
<!-- doctors list end -->
