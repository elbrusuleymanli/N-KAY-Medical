@model NewsWall
@inject LanguageService language
@{
    ViewData["Title"] = "Details";
}

<!-- banner start -->
<div class="container-fluid p-0">
    <div class="banner">
        <div class="banner-image">
            <img src="~/assets/images/banners/news-banner.jpg" alt="">
            <div class="container">
                <h3>@language.Getkey("XƏBƏRLƏR")</h3>
            </div>

        </div>
    </div>
</div>


<!-- banner end -->
<!-- news detail start -->
<div class="container">
    <div class="news-detail">
        <img src="~/assets/images/@Model.Image" alt="">
        <div class="news-text">
            <article>
                <h2>@language.Getkey(Model.Title)</h2>
                <span class="news-date">@Model.ReleaseDate.ToString("dd") @Model.ReleaseDate.ToString("MMMM") @Model.ReleaseDate.ToString("yyyy")</span>
                <p>
                    @Html.Raw(language.Getkey(Model.Descr1))
                </p>
                <p>
                    @if (Model.Descr2 == null)
                    {
                        @Html.Raw(Model.Descr2)
                    }
                    else
                    {
                        @Html.Raw(language.Getkey(Model.Descr2))
                    }

                </p>
                <p>
                    @if (Model.Descr3 == null)
                    {
                        @Html.Raw(Model.Descr3)
                    }
                    else
                    {
                        @Html.Raw(language.Getkey(Model.Descr3))
                    }
                   
                </p>
            </article>
        </div>
    </div>
</div>




<!-- news detail end -->
